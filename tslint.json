{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "types": [
    "heremaps"
  ],
  "rules": {
    "interface-name": false,
    "member-access": false,
    "no-console": false,
    "no-namespace": false,
    "no-string-literal": false,
    "object-literal-sort-keys": false,
    "jsx-boolean-value": false
  }
}
